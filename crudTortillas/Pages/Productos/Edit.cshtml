@page
@model crudTortillas.Pages.Productos.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4>productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productos.Id" />
            <div class="form-group">
                <label asp-for="productos.idProovedor" class="control-label">Id proovedor</label>
                <input asp-for="productos.idProovedor" class="form-control" />
                <span asp-validation-for="productos.idProovedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productos.nombre" class="control-label">Nombre del producto</label>
                <input asp-for="productos.nombre" class="form-control" />
                <span asp-validation-for="productos.nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productos.descripcion" class="control-label">Descripcion</label>
                <input asp-for="productos.descripcion" class="form-control" />
                <span asp-validation-for="productos.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productos.precio" class="control-label">Precio</label>
                <input asp-for="productos.precio" class="form-control" />
                <span asp-validation-for="productos.precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a productos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
