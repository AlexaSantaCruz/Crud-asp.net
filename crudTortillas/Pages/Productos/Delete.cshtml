@page
@model crudTortillas.Pages.Productos.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>¿Deseas eliminar la siguiente información?</h3>
<div>
    <h4>productos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
             <p>id Proovedor</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productos.idProovedor)
        </dd>
        <dt class="col-sm-2">
             <p>Nombre del Producto</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productos.nombre)
        </dd>
        <dt class="col-sm-2">
             <p>Descripción</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productos.descripcion)
        </dd>
        <dt class="col-sm-2">
             <p>precio</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productos.precio)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="productos.Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista de productos</a>
    </form>
</div>
