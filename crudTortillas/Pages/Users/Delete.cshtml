@page
@model crudTortillas.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>¿Está Seguuro de eliminar los siguientes datos?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Nombre</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.name)
        </dd>
        <dt class="col-sm-2">
            <p>Correo</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista de usuarios</a>
    </form>
</div>
