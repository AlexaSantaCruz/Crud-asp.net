@page
@model crudTortillas.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p>Nombre</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.name)
        </dd>
        <dt class="col-sm-2">
            <p>Correo</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User?.id">Editar</a> |
    <a asp-page="./Index">Volver a la lista de usuarios</a>
</div>
